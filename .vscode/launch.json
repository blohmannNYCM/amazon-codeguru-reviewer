{
    "configurations": [
        {
            "type": "aws-sam",
            "request": "direct-invoke",
            "name": "API amazon-codeguru-reviewer-sample-app:CodeGuruLambda",
            "invokeTarget": {
                "target": "api",
                "templatePath": "${workspaceFolder}/template.yaml",
                "logicalId": "CodeGuruLambda"
            },
            "api": {
                "path": "/CallLambdaForCodeGuru",
                "httpMethod": "Post",
                "payload": {
                    "json": {
                        "operations":"Profiler",
                        "Number of loops": 3
                    }
                }
            }
        }
    ]
}